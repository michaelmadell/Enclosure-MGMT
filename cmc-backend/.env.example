# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# Use "*" for development, comma-separated origins for production
# Example: CORS_ORIGIN=http://localhost:5173,http://192.168.1.100:5173
CORS_ORIGIN=*

# Database Configuration
DB_PATH=./cmc-manager.db

# Security
# Set to true to enable password encryption (requires setup)
ENCRYPT_PASSWORDS=false
# Secret key for password encryption (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=

# Session Configuration
SESSION_SECRET=change-this-to-a-random-string-in-production
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log