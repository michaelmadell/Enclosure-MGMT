# Backend Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# HTTPS Configuration
USE_HTTPS=false
# Set to true to enable HTTPS (requires running npm run generate-cert first)

# CORS Configuration
# Comma-separated list of allowed origins
# Use * for development, specific domains for production
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Database Configuration
DB_PATH=./cmc-manager.db

# Authentication Configuration
JWT_SECRET=your-secret-key-change-in-production-use-a-long-random-string
JWT_EXPIRY=24h

# Password Encryption (for CMC passwords stored in database)
ENCRYPT_PASSWORDS=true
ENCRYPTION_KEY=your-encryption-key-change-in-production-min-32-chars

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window

# Logging Configuration
DEBUG=false
LOG_LEVEL=info

# Security Headers
HSTS_MAX_AGE=31536000
# HTTP Strict Transport Security max age (1 year)